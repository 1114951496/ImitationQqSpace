<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource"
          p:driverClassName="com.mysql.jdbc.Driver"
          p:url="jdbc:mysql://115.159.197.215:3306/easyspace"
          p:username="sb"
          p:password="sb1234567890"/>

    <bean id="sessionFactory" class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/>

        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">
                    org.hibernate.dialect.MySQL5InnoDBDialect
                </prop>
                <prop key="hibernate.hbm2ddl.auto">update</prop>
                <prop key="connection.autocommit">false</prop>
            </props>
        </property>

        <property name="packagesToScan">
            <list>
                <value>cn.mk95.www.bean</value><!-- 加载hibernate的jpa注解形式的实体类 -->
            </list>
        </property>
    </bean>


    <bean id="userDao" class="cn.mk95.www.dao.UserDaoImpl"
          p:sessionFactory-ref="sessionFactory"/>
    <bean id="AlbumDao" class="cn.mk95.www.dao.AlbumDaoImpl"
          p:sessionFactory-ref="sessionFactory"/>
    <bean id="CommentDao" class="cn.mk95.www.dao.CommentDaoImpl"
          p:sessionFactory-ref="sessionFactory"/>
    <bean id="EmailYzDao" class="cn.mk95.www.dao.EmailYzDaoImpl"
          p:sessionFactory-ref="sessionFactory"/>
    <bean id="FriendDao" class="cn.mk95.www.dao.FriendDaoImpl"
          p:sessionFactory-ref="sessionFactory"/>
    <bean id="MessageDao" class="cn.mk95.www.dao.MessageDaoImpl"
          p:sessionFactory-ref="sessionFactory"/>
    <bean id="NoteDao" class="cn.mk95.www.dao.NoteDaoImpl"
          p:sessionFactory-ref="sessionFactory"/>
    <bean id="RegisterYzDao" class="cn.mk95.www.dao.RegisterYzDaoImpl"
          p:sessionFactory-ref="sessionFactory"/>
    <bean id="ShareDao" class="cn.mk95.www.dao.ShareDaoImpl"
          p:sessionFactory-ref="sessionFactory"/>

    <import resource="classpath:y_springConfig.xml"/>
</beans>