<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="cn.mk95.www.bean.MessageEntity" table="message" schema="easyspace">
        <id name="userid">
            <column name="userid" sql-type="int(6)"/>
        </id>
        <property name="sendtime">
            <column name="sendtime" sql-type="datetime"/>
        </property>
        <property name="text">
            <column name="text" sql-type="varchar(60)" length="60"/>
        </property>
    </class>
</hibernate-mapping>